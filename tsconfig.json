{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "outDir": "build",
    "paths": {},
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2018"
  },
  "exclude": [],
  "include": [
    "source/**/*.ts",
    "tests/**/*.ts"
  ]
}
